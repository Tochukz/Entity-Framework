@page "{subcategoryId}"
@model BookWebsite.Pages.SubcategoryModel
@{
	int i = 0;
}

<div class="container">
	<div class="row">
		<div class="col-sm-10">
			<h3>@Model.Subcategory.Name</h3>
			<h4>Select your book</h4>
			<table class="table table-striped table-bordered">
				<thead>
					<tr>
						<th>S/N</th>
						<th>Title</th>
						<th>Author</th>
						<th>Price</th>
						<th>Edition</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var book in Model.Subcategory.Books)
					{
						i++;
						<tr>
							<td>@i</td>
							<td>
								<a href="/book/@book.BookId">@book.Title</a>
							</td>
							<td>@book.Author</td>
							<td>@book.Price</td>
							<td>@book.Edition</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
